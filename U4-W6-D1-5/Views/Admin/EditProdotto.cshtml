@model U4_W6_D1_5.Models.Prodotto

@{
    ViewBag.Title = "Modifica Prodotto";
    TempData["IdProdotto"] = ViewContext.RouteData.Values["Id"];
}

@if (ViewBag.Errore != null)
{
    <div class="alert alert-danger w-25 mx-auto text-center p-4">@ViewBag.Errore</div>
}

@section Styles {
    <link href="~/Content/editprodotto.css" rel="stylesheet" />
    <style>
        body {
            background: url(https://static.vecteezy.com/ti/foto-gratuito/p2/2489410-legno-grigio-plank-weathered-texture-di-sfondo-foto.jpg) no-repeat fixed;
            background-size: cover;
        }
    </style>
}

<div class="min-vh-100 d-flex justify-content-evenly align-items-center p-5">
    @using (Html.BeginForm("EditProdotto", "Admin", FormMethod.Post, new { @class = "w-50", @enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="p-4 mx-auto rounded-4" style="background: orange; border:5px solid #bd6132">
        <h2 class="text-center pb-3 fs-1" style="color: #bd6132">Modifica prodotto</h2>
            @Html.HiddenFor(model => model.IdProdotto)
            <div class="form-group text-center mb-3">
                @Html.LabelFor(model => model.NomeProdotto, htmlAttributes: new { @class = "control-label d-block pb-2 text-white fw-bold fs-4" })
                <div class="d-flex justify-content-center">
                    @Html.EditorFor(model => model.NomeProdotto, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NomeProdotto, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group text-center mb-3">
                @Html.LabelFor(model => model.FotoProdotto, htmlAttributes: new { @class = "control-label d-block pb-2 text-white fw-bold fs-4" })
                <div class="d-flex justify-content-center">
                    @Html.EditorFor(model => model.FotoProdotto, new { htmlAttributes = new { @class = "form-control", type = "file" } })
                    @Html.ValidationMessageFor(model => model.FotoProdotto, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group text-center mb-3">
                @Html.LabelFor(model => model.PrezzoProdotto, htmlAttributes: new { @class = "control-label d-block pb-2 text-white fw-bold fs-4" })
                <div class="d-flex justify-content-center">
                    @Html.EditorFor(model => model.PrezzoProdotto, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PrezzoProdotto, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group text-center mb-3">
                @Html.LabelFor(model => model.TempoConsegna, htmlAttributes: new { @class = "control-label d-block pb-2 text-white fw-bold fs-4" })
                <div class="d-flex justify-content-center">
                    @Html.EditorFor(model => model.TempoConsegna, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TempoConsegna, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group text-center mb-4">
                @Html.LabelFor(model => model.Ingredienti, htmlAttributes: new { @class = "control-label d-block pb-2 text-white fw-bold fs-4" })
                <div class="d-flex justify-content-center">
                    @Html.EditorFor(model => model.Ingredienti, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Ingredienti, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="text-center">
                    <input type="submit" value="Salva" class="btn w-50 text-white fw-bold fs-4" style="background-color: #bd6132" />
                </div>
            </div>
        </div>
